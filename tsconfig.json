{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings.d.ts"
  ]
}
